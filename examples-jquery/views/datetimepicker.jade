extends ./layout.jade

block content
  .grid
    .u-sm-16
      .box.padding.margin-top
        .form-control
          label datepicker
          input(type="text" placeholder="Format: YYYY-MM-DD")#select-date
        h3#selected-date
        .datepicker#date-picker

append script
  script.
    $(function() {
      $('#select-date').datepicker({
        date: '2015-12-20',
        format: 'YYYY-MM-DD'
      });

      $('#date-picker')
        .datepicker({
          date: '2015-12-20',
          format: 'YYYY-MM-DD'
        })
        .on('datechange.datepicker', (event, date) => {
          $('#selected-date').html(`${date.year}-${date.month}-${date.date}`);
        });
    });
