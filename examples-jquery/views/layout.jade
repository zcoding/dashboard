doctype html
html

  include ./includes/head.jade

  body(style="height:100%;")

    include ./includes/aside.jade

    include ./includes/topbar.jade

    .db-content.scroll-y(style="height:100%;")
      block content

    block script
      script(src="/lib/jquery/2.1.4/jquery-2.1.4.min.js")
      script(src="/js/dashboard.min.js")
      script(src="/lib/highlight/highlight.pack.js")
      script.
        hljs.initHighlightingOnLoad();
        $(function() {
          $('[data-collapse]').collapse();
          $('.db-hide-scroll.flex').scrollbar({
            style: 'light'
          });
          $('.db-content').scrollbar({
            width: 10,
            fade: false,
            speed: 100
          });
        });
