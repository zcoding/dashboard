extends ./layout.jade

block content
  .grid.padding
    .u-sm-8
      table.table
        thead
          tr
            th #
            th Name
            th Email
            th Age
            th Address
            th Last-login-time
            th Operation
        tbody
          each item in list
            tr
              td= item.id
              td= item.name
              td= item.email
              td= item.age
              td= item.address
              td= item.lastLoginTime
              td
                button(type="button").btn.btn-danger Delete
    .u-sm-8
      .panel.panel-primary
        .panel-header Table in panel (random data created by mock.js)
        table.table
          thead
            tr
              th #
              th Name
              th Email
              th Age
              th Address
              th Last-login-time
              th Operation
          tbody
            each item in list
              tr
                td= item.id
                td= item.name
                td= item.email
                td= item.age
                td= item.address
                td= item.lastLoginTime
                td
                  button(type="button").btn.btn-danger Delete
        .panel-footer.cf
          ul.pagination.fr
            li
              a(href="#/page=3")
                i.fa.fa-chevron-left
            li
              a(href="#/page=1") 1
            li
              a(href="#/page=2") 2
            li.active
              a(href="#/page=3") 3
            li
              a(href="#/page=4") 4
            li
              a(href="#/page=5") 5
            li
              a(href="#/page=4")
                i.fa.fa-chevron-right
