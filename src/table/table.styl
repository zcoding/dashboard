@import '../vars'

table
  border-spacing 0
  border-collapse collapse

th, td
  text-align left

.{namespace}-table
  width 100%
  max-width 100%
  background-color transparent

  & > thead > tr > th
    padding 10px 16px
    vertical-align bottom
    line-height 1.5
    border-top 1px solid #eceeef
    border-bottom 2px solid rgba(120,130,140,.045)

  & > tbody > tr > td
    padding .75rem 16px
    line-height 1.5
    vertical-align top
    border-top 1px solid rgba(120, 130, 140, .045)
