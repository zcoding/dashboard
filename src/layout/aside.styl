@import '../vars'

asideBackground = #2E3E4E

.{namespace}-aside
  position fixed!important
  top 0
  left 0
  width asideWidth
  height 100%
  z-index baseIndex+1
  overflow hidden

  ul, li
    list-style-type none
    display block
    margin 0
    padding 0

  a
    color rgba(255, 255, 255, 0.870588)

  li a
    display block
    padding 0 1rem
    line-height 2.25rem
    &:hover, &:active
      background-color rgba(0, 0, 0, .065)

  li > ul
    background-color rgba(0, 0, 0, .15)
  li > ul > li > ul
    background-color rgba(0, 0, 0, .2)

  .navside
    display flex
    -webkit-flex-direction column
    -ms-flex-direction column
    flex-direction column
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background asideBackground

  nav.scroll
    width 12.5rem

.{namespace}-hide-scroll
  overflow auto
  width auto
  margin-right -17px
  -webkit-overflow-scrolling touch

.flex
  -webkit-flex 1
  -ms-flex 1
  flex 1
